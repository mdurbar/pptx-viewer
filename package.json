{
  "name": "pptx-viewer",
  "version": "0.1.0",
  "description": "A lightweight, zero-dependency PPTX viewer for the browser",
  "author": "",
  "license": "MIT",
  "type": "module",
  "main": "dist/pptx-viewer.cjs",
  "module": "dist/pptx-viewer.js",
  "browser": "dist/pptx-viewer.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pptx-viewer.js",
      "require": "./dist/pptx-viewer.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "fflate": "^0.8.2"
  },
  "keywords": [
    "pptx",
    "powerpoint",
    "viewer",
    "presentation",
    "office",
    "ooxml"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mdurbar/pptx-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/mdurbar/pptx-viewer/issues"
  },
  "homepage": "https://github.com/mdurbar/pptx-viewer#readme"
}
